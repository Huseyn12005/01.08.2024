@model Product

<h2>Add Product</h2>

<form asp-action="Add" method="post">
    <div>
        <label>Name</label>
        <input type="text" name="Name"/>
    </div>

    <div>
        <label>Price</label>
        <input type="text" name="Price" step="0.01"/>
    </div>

    <button type="submit">Add</button>
</form>
